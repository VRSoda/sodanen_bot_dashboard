{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"],
            "@server/*": ["./server/*"]
        },
        "composite": true
    },
    "include": ["server", "src"],
    "exclude": ["node_modules", "dist"]
}
